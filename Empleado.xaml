<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:e="clr-namespace:_3716370Practica13.Clases"
             x:Class="_3716370Practica13.Empleado"
             Title="Empleado">

    <ContentPage.BindingContext>
        <e:SueldoClases/>
    </ContentPage.BindingContext>


    <VerticalStackLayout>
        
        <Entry Placeholder="Â¿Cual es el sueldo del empleado?" 
               Text="{Binding Sueldo}" 
              />

        <Button Text="Realizar aumento"
                WidthRequest="290"
                CornerRadius="20"
                BackgroundColor="Red"
                Command="{Binding AumentoEmCommand}" />

        <Label Text="Sueldo actualizado" 
               HorizontalOptions="CenterAndExpand"
               FontSize="Large"/>

        <Label Text="{Binding Aumento}"
               HorizontalOptions="Center"
               FontSize="Large"/>

    </VerticalStackLayout>

</ContentPage>